{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd java-leaderboard && javac -cp 'libs/*:src' -d bin src/com/insightxr/**/*.java"
  },
  "deploy": {
    "startCommand": "cd java-leaderboard && java -cp 'libs/*:bin' com.insightxr.App",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
